#!/usr/bin/env bash
set -eu

PLATFORM=${PLATFORM:-}
VERSION=${VERSION:-"unknown-version"}
GITCOMMIT=${GITCOMMIT:-$(git rev-parse --short HEAD 2> /dev/null || true)}
BUILDTIME=${BUILDTIME:-$(date --utc --rfc-3339 ns 2> /dev/null | sed -e 's/ /T/')}

PLATFORM_LDFLAGS=
if test -n "${PLATFORM}"; then
	PLATFORM_LDFLAGS="-X \"github.com/le0pard/certonid/cli/version.PlatformName=${PLATFORM}\""
fi

export LDFLAGS="\
    -w \
    ${PLATFORM_LDFLAGS} \
    -X \"github.com/le0pard/certonid/cli/version.GitCommit=${GITCOMMIT}\" \
    -X \"github.com/le0pard/certonid/cli/version.BuildTime=${BUILDTIME}\" \
    -X \"github.com/le0pard/certonid/cli/version.Version=${VERSION}\" \
    ${LDFLAGS:-} \
"

GOOS="${GOOS:-$(go env GOHOSTOS)}"
GOARCH="${GOARCH:-$(go env GOHOSTARCH)}"
